{
  "model": "claude-sonnet-4-5-20250929",
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": false,

  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "MAX_THINKING_TOKENS": "10000",
    "USE_BUILTIN_RIPGREP": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_OUTPUT_LENGTH": "50000"
  },

  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/yonnock/Developer/moto/project-phoenix/.claude/hooks/format-go.sh",
            "description": "Auto-format Go files with gofmt and goimports"
          },
          {
            "type": "command",
            "command": "bash /Users/yonnock/Developer/moto/project-phoenix/.claude/hooks/format-typescript.sh",
            "description": "Auto-format TypeScript/JavaScript with Prettier"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/yonnock/Developer/moto/project-phoenix/.claude/hooks/check-commit-message.sh",
            "description": "Validate conventional commit format"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/yonnock/Developer/moto/project-phoenix/.claude/hooks/check-env-files.sh",
            "description": "Verify environment files exist"
          }
        ]
      }
    ]
  }
}
