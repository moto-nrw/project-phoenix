{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.25.5",
    "nodejs_20@latest",
    "golangci-lint@latest",
    "goimports@latest",
    "bruno-cli@latest",
    "openssl@latest",
    "jq@latest",
    "ripgrep@latest",
    "fd@latest",
    "bat@latest",
    "eza@latest",
    "fzf@latest",
    "delta@latest",
    "tealdeer@latest",
    "btop@latest",
    "pgcli@latest",
    "dotenv-linter@latest",
    "lefthook@latest",
    "git-secrets@latest",
    "ni@latest",
    "tree@latest",
    "curl@latest",
    "git@latest",
    "dyff@latest"
  ],
  "env": {
    "GOPATH":      "$PWD/.devbox/go",
    "CGO_ENABLED": "0"
  },
  "shell": {
    "init_hook": [
      "lefthook install --force > /dev/null 2>&1 || true",
      "[ ! -d frontend/node_modules ] && echo 'installing frontend deps...' && cd frontend && nci --silent || true",
      "echo \"phoenix ready | go $(go version | cut -d' ' -f3 | sed 's/go//') node $(node -v | sed 's/v//') | ni nr nci pgcli bat eza fzf btop tldr\""
    ]
  }
}
