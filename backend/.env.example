# Backend Environment Configuration Example
# This file serves as a template for backend configuration
# It is an alternative to dev.env but serves the same purpose

PORT=8080
LOG_LEVEL=DEBUG
LOG_TEXTLOGGING=false

# Database connection
# Note: For GDPR compliance, SSL should be enabled with sslmode=require
# SSL requires certificates generated with deployment/postgres/create-certs.sh
DB_DSN=postgres://username:password@localhost:5432/database?sslmode=require

# Authentication settings
AUTH_LOGIN_URL=http://localhost:8080/login
AUTH_LOGIN_TOKEN_LENGTH=8
AUTH_LOGIN_TOKEN_EXPIRY=10m
AUTH_JWT_SECRET=your_secret_key_here
AUTH_JWT_EXPIRY=15m
AUTH_JWT_REFRESH_EXPIRY=1h

# Email configuration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=user@example.com
EMAIL_SMTP_PASSWORD=your_password_here
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Project Phoenix

ENABLE_CORS=false