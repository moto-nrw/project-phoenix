# Backend Development Environment Configuration
# Copy this file to 'dev.env' and modify values as needed
# This file is used ONLY when running the backend directly (not through Docker)

PORT=8080
LOG_LEVEL=DEBUG
LOG_TEXTLOGGING=false

# Database connection with SSL enabled for security
# Note: For SSL to work, certificates must be generated with deployment/postgres/create-certs.sh
DB_DSN=postgres://username:password@localhost:5432/database?sslmode=require

# Frontend login URL
LOGIN_URL=http://localhost:8080/login
AUTH_JWT_SECRET=your_jwt_secret_here
APP_ENV=development
AUTH_JWT_EXPIRY=15m
AUTH_JWT_REFRESH_EXPIRY=1h

# Admin user credentials (required for first migration)
ADMIN_EMAIL=kontakt@moto.nrw
ADMIN_PASSWORD=strong_password_here

EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=user@example.com
EMAIL_SMTP_PASSWORD=your_password_here
EMAIL_FROM_ADDRESS=no-reply@example.com
EMAIL_FROM_NAME=Project Phoenix

ENABLE_CORS=false