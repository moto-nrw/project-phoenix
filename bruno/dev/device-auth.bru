meta {
  name: Dev Device Auth
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/iot/ping
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
}

script:post-response {
  if (res.status === 200) {
    console.log("✅ Device auth OK");
  } else {
    console.log("❌ Device auth failed");
  }
}