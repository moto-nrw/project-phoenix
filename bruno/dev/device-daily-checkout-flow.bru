meta {
  name: Daily Checkout Complete Flow
  type: http
  seq: 100
}

post {
  url: {{baseUrl}}/api/iot/checkin
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
  Content-Type: application/json
}

body:json {
  {
    "student_rfid": "{{testStudent3RFID}}",
    "action": "checkin",
    "room_id": 1
  }
}

tests {
  test("Student checked into their home room", function() {
    const expectedName = bru.getEnvVar('testStudent3Name');
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody()).to.have.property('status', 'success');
    expect(res.getBody().data).to.have.property('action', 'checked_in');
    expect(res.getBody().data).to.have.property('student_name', expectedName);
    expect(res.getBody().data).to.have.property('room_name', 'Klassenzimmer 1A');

    console.log(`Student ${expectedName} checked into Klassenzimmer 1A (home room)`);
  });
}