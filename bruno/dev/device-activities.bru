meta {
  name: Device Activities List
  type: http
  seq: 12
}

get {
  url: {{baseUrl}}/api/iot/activities
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
}

tests {
  test("should return 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("should return wrapped response with data array", function() {
    const body = res.getBody();
    expect(body).to.have.property('status', 'success');
    expect(body).to.have.property('data');
    expect(body.data).to.be.an('array');
  });
  
  test("activities should have required fields", function() {
    const body = res.getBody();
    const activities = body.data;
    if (activities.length > 0) {
      const activity = activities[0];
      expect(activity).to.have.property('id');
      expect(activity).to.have.property('name');
      expect(activity).to.have.property('category_name');
      expect(activity).to.have.property('supervisor_name');
      expect(activity).to.have.property('is_active');
    }
  });
}

script:post-response {
  if (res.status === 200) {
    const body = res.body;
    const activities = body.data || [];
    console.log(`✅ Device activities OK - ${activities.length} activities`);
    if (activities.length > 0) {
      console.log(`   First activity: ${activities[0].name} (${activities[0].category_name})`);
    }
  } else {
    console.log("❌ Device activities failed");
  }
}