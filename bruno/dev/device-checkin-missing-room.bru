meta {
  name: Device Check-in Missing Room ID
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/api/iot/checkin
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
  Content-Type: application/json
}

body:json {
  {
    "student_rfid": "RFID-001032",
    "action": "checkin"
  }
}

tests {
  test("Check-in without room_id returns error", function() {
    expect(res.getStatus()).to.equal(400);
    expect(res.getBody()).to.have.property('status', 'error');
    expect(res.getBody()).to.have.property('error');
    expect(res.getBody().error).to.include('room_id is required');
  });
}