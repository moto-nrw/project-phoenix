meta {
  name: Device Session End
  type: http
  seq: 17
}

post {
  url: {{baseUrl}}/api/iot/session/end
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
}

tests {
  test("should return 200 or 400", function() {
    const status = res.getStatus();
    expect([200, 400]).to.include(status);
  });
  
  test("should return proper response structure", function() {
    const body = res.getBody();
    expect(body).to.have.property('status');
    expect(body).to.have.property('data');
    
    if (res.getStatus() === 200) {
      // Success response
      expect(body.data).to.have.property('active_group_id');
      expect(body.data).to.have.property('activity_id');
      expect(body.data).to.have.property('device_id');
      expect(body.data).to.have.property('ended_at');
      expect(body.data).to.have.property('duration');
      expect(body.data).to.have.property('status', 'ended');
    } else if (res.getStatus() === 400) {
      // No active session response
      expect(body).to.have.property('status', 'error');
      expect(body).to.have.property('message');
    }
  });
}

script:post-response {
  if (res.status === 200) {
    const data = res.body.data;
    console.log(`✅ Session ended OK - Group ID: ${data.active_group_id}, Duration: ${data.duration}`);
  } else if (res.status === 400) {
    console.log(`⚠️  No active session to end`);
  } else {
    console.log("❌ Session end failed");
  }
}