meta {
  name: Device Session Management
  type: http
  seq: 14
}

post {
  url: {{baseUrl}}/api/iot/session/start
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
  Content-Type: application/json
}

body:json {
  {
    "activity_id": 1,
    "force": false
  }
}

tests {
  test("should return 200 or 409 for session start", function() {
    // 200 = success, 409 = conflict (both are valid responses)
    const status = res.getStatus();
    expect([200, 409]).to.include(status);
  });
  
  test("should return proper response structure", function() {
    const body = res.getBody();
    expect(body).to.have.property('status');
    expect(body).to.have.property('data');
    
    if (res.getStatus() === 200) {
      // Success response
      expect(body.data).to.have.property('active_group_id');
      expect(body.data).to.have.property('activity_id');
      expect(body.data).to.have.property('device_id');
      expect(body.data).to.have.property('start_time');
      expect(body.data).to.have.property('status', 'started');
    } else if (res.getStatus() === 409) {
      // Conflict response
      expect(body.data).to.have.property('status', 'conflict');
      expect(body.data).to.have.property('conflict_info');
      expect(body.data.conflict_info).to.have.property('has_conflict', true);
      expect(body.data.conflict_info).to.have.property('can_override', true);
    }
  });
}

script:post-response {
  if (res.status === 200) {
    const data = res.body.data;
    console.log(`✅ Session started OK - Group ID: ${data.active_group_id}, Activity: ${data.activity_id}`);
    
    // Store session info for cleanup
    bru.setVar("activeGroupId", data.active_group_id);
    bru.setVar("sessionStarted", true);
  } else if (res.status === 409) {
    const data = res.body.data;
    console.log(`⚠️  Session conflict detected - ${data.conflict_info.conflict_message}`);
    console.log(`   Can override: ${data.conflict_info.can_override}`);
    bru.setVar("sessionStarted", false);
  } else {
    console.log("❌ Session start failed");
    bru.setVar("sessionStarted", false);
  }
}