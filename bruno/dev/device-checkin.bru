meta {
  name: Device Check-in/Check-out
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/iot/checkin
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
  Content-Type: application/json
}

body:json {
  {
    "student_rfid": "RFID-001030",
    "action": "checkin",
    "room_id": 3
  }
}

tests {
  test("Check-in successful", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody()).to.have.property('status', 'success');
    expect(res.getBody().data).to.have.property('action', 'checked_in');
    expect(res.getBody().data).to.have.property('student_name');
    expect(res.getBody().data).to.have.property('visit_id');
  });
  
  test("Response includes German greeting", function() {
    expect(res.getBody().data).to.have.property('message');
    expect(res.getBody().data.message).to.include('Hallo');
  });
  
  test("Room information provided", function() {
    expect(res.getBody().data).to.have.property('room_name');
  });
}