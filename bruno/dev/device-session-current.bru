meta {
  name: Device Session Current
  type: http
  seq: 15
}

get {
  url: {{baseUrl}}/api/iot/session/current
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
}

tests {
  test("should return 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("should return proper session structure", function() {
    const body = res.getBody();
    expect(body).to.have.property('status', 'success');
    expect(body).to.have.property('data');
    expect(body.data).to.have.property('device_id');
    expect(body.data).to.have.property('is_active');
    
    if (body.data.is_active) {
      expect(body.data).to.have.property('active_group_id');
      expect(body.data).to.have.property('activity_id');
      expect(body.data).to.have.property('start_time');
      expect(body.data).to.have.property('duration');
    }
  });
}

script:post-response {
  if (res.status === 200) {
    const data = res.body.data;
    if (data.is_active) {
      console.log(`✅ Active session found - Group ID: ${data.active_group_id}, Activity: ${data.activity_id}`);
      console.log(`   Duration: ${data.duration}`);
    } else {
      console.log(`✅ No active session on device ${data.device_id}`);
    }
  } else {
    console.log("❌ Current session check failed");
  }
}