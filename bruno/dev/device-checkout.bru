meta {
  name: Device Check-out
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/iot/checkin
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
  X-Staff-PIN: {{staffPIN}}
  Content-Type: application/json
}

body:json {
  {
    "student_rfid": "RFID-001030",
    "action": "checkout"
  }
}

tests {
  test("Check-out successful", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody()).to.have.property('status', 'success');
    expect(res.getBody().data).to.have.property('action', 'checked_out');
    expect(res.getBody().data).to.have.property('student_name');
  });
  
  test("Response includes German farewell", function() {
    expect(res.getBody().data).to.have.property('message');
    expect(res.getBody().data.message).to.include('Tsch√ºss');
  });
  
  test("Visit ID provided for ended visit", function() {
    expect(res.getBody().data).to.have.property('visit_id');
  });
}