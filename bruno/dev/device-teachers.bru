meta {
  name: Device Teachers List
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/iot/teachers
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{deviceApiKey}}
}

script:post-response {
  if (res.status === 200) {
    console.log("✅ Teachers list retrieved successfully");
    console.log("Found " + res.body.data.length + " teachers with PINs");
    if (res.body.data.length > 0) {
      console.log("Teachers:", res.body.data.map(t => t.display_name).join(", "));
    }
  } else {
    console.log("❌ Failed to get teachers list");
    console.log("Status:", res.status);
    console.log("Response:", res.body);
  }
}