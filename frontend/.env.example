# Environment variables for the frontend app
# Copy this file to .env.local and fill in your values

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="" # Generate with: openssl rand -base64 32
AUTH_SECRET="" # Legacy - use NEXTAUTH_SECRET instead

# API Configuration
# Client-side accessible API URL - must include protocol and port
NEXT_PUBLIC_API_URL=http://localhost:8080

# Development Options
SKIP_ENV_VALIDATION=false # Set to true to skip validation during development
