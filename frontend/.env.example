# Local environment configuration for development
# This file should not be committed to version control
# Copy this file to .env.local and replace placeholders with your actual values

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your_nextauth_secret" # In production, generate with: openssl rand -base64 32
AUTH_SECRET="your_auth_secret_key" # Legacy - use NEXTAUTH_SECRET instead
AUTH_JWT_EXPIRY=15m
AUTH_JWT_REFRESH_EXPIRY=24h

# API Configuration
# Client-side accessible API URL - must include protocol and port
NEXT_PUBLIC_API_URL=http://localhost:8080

# Multi-Tenant Configuration
# Base domain for subdomain routing (e.g., "moto-app.de" or "localhost:3000")
NEXT_PUBLIC_BASE_DOMAIN=localhost:3000
# BetterAuth service URL for internal server-to-server calls (middleware)
BETTERAUTH_INTERNAL_URL=http://localhost:3001

# SaaS Admin Configuration
# Internal API key for server-to-server calls (must match BetterAuth's INTERNAL_API_KEY)
INTERNAL_API_KEY=dev-internal-key
# Comma-separated list of emails allowed to access SaaS admin dashboard
SAAS_ADMIN_EMAILS=admin@example.com

# Development Options
SKIP_ENV_VALIDATION=true # Set to false to enforce validation during development