# Local environment configuration for development
# This file should not be committed to version control
# Copy this file to .env.local and replace placeholders with your actual values

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your_nextauth_secret" # In production, generate with: openssl rand -base64 32
AUTH_SECRET="your_auth_secret_key" # Legacy - use NEXTAUTH_SECRET instead

# API Configuration
# Client-side accessible API URL - must include protocol and port
NEXT_PUBLIC_API_URL=http://localhost:8080

# Development Options
SKIP_ENV_VALIDATION=true # Set to false to enforce validation during development