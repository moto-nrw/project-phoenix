{
  "name": "phoenix-betterauth",
  "version": "1.0.0",
  "description": "BetterAuth authentication service for Project Phoenix multi-tenancy",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "npx @better-auth/cli migrate",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "knip": "knip"
  },
  "dependencies": {
    "@noble/hashes": "^1.7.0",
    "better-auth": "^1.2.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "knip": "^5.80.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "knip": {
    "entry": [
      "src/index.ts",
      "src/auth.ts",
      "src/email.ts"
    ],
    "project": [
      "src/**/*.ts"
    ],
    "ignoreDependencies": []
  }
}
